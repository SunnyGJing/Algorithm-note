"""
Creat time: 2019-07-21 14:25
Last modified time: 

将字符串中的所有空格替换为%20。

2种Solution
1) 临时存储结果   O(n)+O(n)
2) 从后往前插入   O(n)+O(1)
"""

class Solution_1 {
public:
	void replaceSpace(char *str,int length) {
        if(length <= 0) return;
        char str_tmp[length+10];
        char *str_t = str_tmp;
        int index = 0;
        for(int i=0; i<length; i++) {
            if(str[i] != ' ') {
                str_tmp[index++]=str[i];
            }
            else {
                str_tmp[index++]='%';
                str_tmp[index++]='2';
                str_tmp[index++]='0';
            }
        }
        while(*str_t) {
            *str++ = *str_t++;
        }
        *str = '\0';
	}
};

class Solution_2 {
public:
	void replaceSpace(char *str,int length) {
        int count = 0;
        for(int i=0; i<length; i++) {
            if(str[i] == ' ')
                count +=2;
        }
        count += length;
        str[count] = '\0';
        for(int i=length-1; i>=0; i--) {
            if(str[i] == ' ') {
                str[--count] = '0';
                str[--count] = '2';
                str[--count] = '%';
            }
            else {
                str[--count] = str[i];
            }
        }
	}
};