#include <cstdio>   //已在pat通过 18-1-13 07:50	 
int main(){
	int n, b;
	scanf("%d%d",&n,&b);
	//十进制转b进制 
	int i = 0, a[40] = {0};
	do{
		a[i++] = n % b;
		n /= b;
	}while(n);  
	//判断回文字 
	int k = i/2; //（记）循环结束时 i 为 length； i-1 为最高位数组下标 
	int count = 0;
	for(int j=0; j<k; j++){
		if(a[j] == a[i-j-1]) count++;
	}
	if(count==k) printf("Yes\n");
	else printf("No\n");
	for(i--; i>=0; i--){
		printf("%d",a[i]); 
		if(i) printf(" ");
	}
		
	return 0;
} 
